<p id="notice"><%= notice %></p>

<h1>Listing Color Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Iban</th>
      <th>Color</th>
      <th>Banker</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @color_transactions.each do |color_transaction| %>
      <tr>
        <td><%= color_transaction.iban %></td>
        <td><%= color_transaction.color %></td>
        <td><%= color_transaction.banker %></td>
        <td><%= link_to 'Show', color_transaction %></td>
        <td><%= link_to 'Edit', edit_color_transaction_path(color_transaction) %></td>
        <td><%= link_to 'Destroy', color_transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

