<p id="notice"><%= notice %></p>

<h1>Listing Person Shareholders</h1>

<table>
  <thead>
    <tr>
      <th>Last name</th>
      <th>Birthdate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person_shareholders.each do |person_shareholder| %>
      <tr>
        <td><%= person_shareholder.last_name %></td>
        <td><%= person_shareholder.birthdate %></td>
        <td><%= link_to 'Show', person_shareholder %></td>
        <td><%= link_to 'Edit', edit_person_shareholder_path(person_shareholder) %></td>
        <td><%= link_to 'Destroy', person_shareholder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

