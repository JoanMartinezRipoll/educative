<p id="notice"><%= notice %></p>

<h1>Listing Shareholders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Trustee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shareholders.each do |shareholder| %>
      <tr>
        <td><%= shareholder.name %></td>
        <td><%= shareholder.trustee_id %></td>
        <td><%= link_to 'Show', shareholder %></td>
        <td><%= link_to 'Edit', edit_shareholder_path(shareholder) %></td>
        <td><%= link_to 'Destroy', shareholder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

